generator client {
  provider = "prisma-client-js"
  output   = "../src/app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  name     String @default("admin")
  email    String @unique
  password String
}

model Topper {
  id         Int     @id @default(autoincrement())
  name       String
  rank       String?
  percentage String?
  avatar     String
  batch      Int
  exam       String
}

model Faculty {
  id         Int    @id @default(autoincrement())
  name       String
  subject    String
  experience Int
  bio        String
  avatar     String
}

model Batch {
  id          String    @id @default(uuid())
  name        String
  category    Category
  level       Level
  description String?
  startDate   DateTime
  endDate     DateTime?
  price       Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Category {
  JEE
  NEET
}

enum Level {
  IX
  X
  XI
  XII
}
